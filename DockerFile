# syntax=docker/dockerfile:1

FROM python:3.11-slim

# Python runtime settings
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PLAYWRIGHT_BROWSERS_PATH=/ms-playwright

WORKDIR /app

# Install system dependencies with Playwright deps in one layer
RUN apt-get update && apt-get install -y \
    xvfb \
    xauth \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for Docker layer caching
COPY requirements.txt .

# Use cache mounts for faster pip installs
RUN --mount=type=cache,target=/root/.cache/pip \
    pip install --upgrade pip && \
    pip install -r requirements.txt

# Install Playwright browsers with system deps and cache
RUN --mount=type=cache,target=/root/.cache/ms-playwright \
    playwright install --with-deps chromium

# Copy the rest of the application
COPY . .

EXPOSE 8888

# Run FastAPI app with xvfb-run and redirect output to console
CMD xvfb-run --auto-servernum --server-args="-screen 0 1920x1080x24" uvicorn main:app --host 0.0.0.0 --port 8888 2>&1
