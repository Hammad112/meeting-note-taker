# Meeting Bot Configuration
# Copy this file to .env and update with your values

# =============================================================================
# EMAIL/CALENDAR PROVIDER
# =============================================================================

# Which provider to use for calendar data
# Options: gmail, calendar_api
# - gmail: Direct Gmail/Google Calendar OAuth (requires OAuth setup)
# - calendar_api: Fetch from backend API endpoint (no OAuth needed!)
EMAIL_PROVIDER=calendar_api

# =============================================================================
# BACKEND API (for EMAIL_PROVIDER=calendar_api)
# =============================================================================

# Backend API configuration
# Your backend should expose: GET /api/calendar/meetings?start=<iso>&end=<iso>
BACKEND_URL=http://localhost:8000
BACKEND_API_KEY=your-api-key-here

# =============================================================================
# AUTHENTICATION SETTINGS (only for EMAIL_PROVIDER=gmail)
# =============================================================================

# Authentication Method
# Options: auto (default), oauth, credentials
# - auto: Tries credentials file first, then oauth token, then prompts user
# - oauth: Use OAuth flow (requires auth server or pre-configured token)
# - credentials: Use direct email/password (requires app password for Gmail)
GMAIL_AUTH_METHOD=auto

# Gmail Direct Credentials (for GMAIL_AUTH_METHOD=credentials)
# For Gmail, you must use an App Password, not your regular password
# Generate one at: https://myaccount.google.com/apppasswords
GMAIL_EMAIL=
GMAIL_PASSWORD=

# OAuth Files (for GMAIL_AUTH_METHOD=oauth)
GMAIL_CREDENTIALS_FILE=credentials/gmail_credentials.json
GMAIL_TOKEN_FILE=credentials/gmail_token.json

# =============================================================================
# AUTHENTICATION SERVER
# =============================================================================

# Enable the web-based authentication server
# Set to false if you're using only environment variables
AUTH_SERVER_ENABLED=true
AUTH_SERVER_HOST=loalhost
AUTH_SERVER_PORT=8888

# =============================================================================
# EMAIL PROVIDER
# =============================================================================

# Which email provider to use
# Options: gmail, outlook, both
EMAIL_PROVIDER=gmail

# =============================================================================
# SCHEDULER SETTINGS
# =============================================================================

# How often to check for new meetings (in seconds)
SCHEDULER__EMAIL_POLL_INTERVAL_SECONDS=40

# How many minutes before start time to join the meeting
SCHEDULER__JOIN_BEFORE_START_MINUTES=1

# Maximum minutes after start time to allow joining
# Prevents joining meetings that started too long ago
SCHEDULER__MAX_JOIN_AFTER_START_MINUTES=10

# Look for meetings within the next X hours
SCHEDULER__LOOKAHEAD_HOURS=24

# Maximum number of concurrent meetings
SCHEDULER__MAX_CONCURRENT_MEETINGS=5

# =============================================================================
# BACKEND API (Optional)
# =============================================================================

# Backend API for storing meetings and transcripts
BACKEND__URL=http://localhost:8000
BACKEND__API_KEY=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Enable debug mode
DEBUG=false

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# GOOGLE MEET CREDENTIALS (Optional for Auto-Login)
# =============================================================================

# Only needed if you want auto-login to Google Meet
# Otherwise, you'll need to be logged in to the browser
GOOGLE_EMAIL=
GOOGLE_PASSWORD=

# =============================================================================
# TRANSCRIPTION SETTINGS (Future)
# =============================================================================

# Transcription provider (not fully implemented yet)
# Options: openai_whisper, deepgram, local_whisper
TRANSCRIPTION__PROVIDER=openai_whisper
TRANSCRIPTION__OPENAI_API_KEY=
TRANSCRIPTION__LANGUAGE=en
