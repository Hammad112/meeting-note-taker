# Meeting Bot Docker Environment Configuration
# Use both Gmail and Outlook with OAuth

# Email Provider
EMAIL_PROVIDER=both

# Enable auth server for OAuth flows
AUTH_SERVER_ENABLED=true

# Scheduler settings
SCHEDULER_EMAIL_POLL_INTERVAL_SECONDS=40
SCHEDULER_JOIN_BEFORE_START_MINUTES=1
SCHEDULER_LOOKAHEAD_HOURS=24

# Gmail Configuration
GMAIL_CREDENTIALS_FILE=credentials/gmail_credentials.json
GMAIL_TOKEN_FILE=credentials/gmail_token.json

# Google OAuth (for docker-compose)
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID:-}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET:-}

