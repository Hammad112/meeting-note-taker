                  "options": {
                    "raw": {
                      "language": "json"
                    }
                  }
                },
                "url": {
                  "raw": "{{baseUrl}}/join",
                  "host": ["{{baseUrl}}"],
                  "path": ["join"]
                }
              },
              "status": "Bad Request",
              "code": 400,
              "_postman_previewlanguage": "json",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"success\": false,\n  \"error\": \"Invalid meeting URL\",\n  \"details\": \"URL must be from Google Meet, Zoom, or Teams\"\n}"
            }
          ]
